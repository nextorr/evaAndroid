    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"

        >

        <!--android:paddingLeft="@dimen/activity_horizontal_margin"-->
        <!--android:paddingRight="@dimen/activity_horizontal_margin"-->

        <VideoView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="45"
            android:id="@+id/videoView_videoLesson" />

        <TextView
            android:id="@+id/textView_lessonTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title not set"
            style="@style/eva.sectionText"
            android:visibility="gone" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#C5E1A5"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="4dp"
            android:layout_weight="8">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView8"
                android:src="@drawable/ic_attach_file" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/resources"
                style="@style/eva.listSeparator" />
        </LinearLayout>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar_files" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:id="@+id/listView_file_list"
            android:layout_weight="47"
            android:paddingLeft="8dp"
            />

    </LinearLayout>




