<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="1dp"
    android:paddingLeft="1dp"
    android:paddingTop="8dp"
    android:paddingBottom="4dp"
    android:background="#f0f0f0">


    <ImageView
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:id="@+id/imageView_lesson_status"
        android:src="@drawable/eva_icon_pending"
        android:layout_marginRight="4dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title not set"
            android:id="@+id/textView_courseTitle"
            style="@style/eva.listItemTitle" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="description not set"
            android:id="@+id/textView_courseDescription"
            style="@style/eva.listItemDescription" />
    </LinearLayout>


</LinearLayout>